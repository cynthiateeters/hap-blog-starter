---
layout: layouts/base.njk
---
{# Include HAP's Prism theme instead of Okaidia #}
<style>{% include "css/prism-hap-theme.css" %}</style>
<style>{% include "css/prism-diff.css" %}</style>

<article class="post-layout">
	<header class="post-header">
		<h1>{{ title }}</h1>
		<div class="post-time">
			{%- set dateParts = page.date | dateInParts -%}
			<time class="post-date" datetime="{{ page.date | htmlDateString }}">
				<span class="date-day">{{ dateParts.day }}</span>
				<span class="date-month">{{ dateParts.month }}</span>
				<span class="date-year">{{ dateParts.year }}</span>
			</time>
		</div>
		<ul class="post-metadata">

			{%- for tag in tags | filterTagList %}
			{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
			<li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a></li>
			{%- endfor %}
		</ul>
	</header>

	<section class="post-content">
		{{ content | safe }}
	</section>
</article>

{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="links-nextprev">
	{%- if previousPost %}<li class="links-nextprev-prev">← Previous<br> <a href="{{ previousPost.url }}">{{
			previousPost.data.title }}</a></li>{% endif %}
	{%- if nextPost %}<li class="links-nextprev-next">Next →<br><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
	</li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
