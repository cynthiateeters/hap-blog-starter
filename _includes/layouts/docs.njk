---
layout: layouts/base.njk
---
{# Include Prism theme for code examples #}
<style>{% include "css/prism-hap-theme.css" %}</style>
<style>{% include "css/prism-diff.css" %}</style>

<article class="docs-layout">
	<header class="docs-header">
		<h1>{{ title }}</h1>
		{% if description %}
		<p class="docs-description">{{ description }}</p>
		{% endif %}
	</header>

	<section class="docs-content">
		{{ content | safe }}
	</section>
</article>

{%- if collections.docs %}
{%- set previousDoc = collections.docs | getPreviousCollectionItem %}
{%- set nextDoc = collections.docs | getNextCollectionItem %}
{%- if nextDoc or previousDoc %}
<nav class="docs-nav" aria-label="Documentation navigation">
	<ul class="links-nextprev">
		{%- if previousDoc %}<li class="links-nextprev-prev">← Previous<br><a href="{{ previousDoc.url }}">{{ previousDoc.data.title }}</a></li>{% endif %}
		{%- if nextDoc %}<li class="links-nextprev-next">Next →<br><a href="{{ nextDoc.url }}">{{ nextDoc.data.title }}</a></li>{% endif %}
	</ul>
</nav>
{%- endif %}
{%- endif %}
